@model MySocial.WebUI.ViewModel.PostViewModel
@{
    ViewData["title"] = "Messages";
}
<input type="hidden" id="UserId" value="@Model.UserId" />
<input type="hidden" id="userInput" value="@Model.UserName" />
<input type="hidden" id="ReceiverId" value="@Model.ReceiverId" />

<div class="position-sticky top-0 end-0 px-3 py-2 bg-white border-bottom rounded-2 shadow-sm">
    <div class="d-flex gap-3">
        <img src="@Model.receiverProfilePictureUrl" alt="Profile Picture" class="rounded-circle me-2" style="object-fit: cover;" width="70" height="70" />
        <p class="fw-bold fs-3 text-center mt-2">@Model.ReceiverName</p>
    </div>
</div>
<div class="d-flex flex-column vh-100">
    <section id="messagesList"></section>
</div>
<div class="position-sticky bottom-0 start-0 end-0 px-3 py-2 bg-white border-top rounded-2 shadow-sm">
    <div class="d-flex justify-content-center gap-3">
        <input type="text" class="search-input form-control w-50" id="messageInput" placeholder="Type a message here.." />
        <button id="sendButton" value="Send Message" class="btn btn-primary rounded-circle">
            <svg xmlns="http://www.w3.org/2000/svg" height="25px" viewBox="0 -960 960 960" width="25px" fill="#e3e3e3"><path d="M120-160v-640l760 320-760 320Zm80-120 474-200-474-200v140l240 60-240 60v140Zm0 0v-400 400Z" /></svg>
        </button>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>

